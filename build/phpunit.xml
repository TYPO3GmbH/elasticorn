<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" backupGlobals="true" colors="true" xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/9.3/phpunit.xsd">
  <coverage processUncoveredFiles="true">
    <include>
      <directory suffix=".php">../Classes/</directory>
    </include>
    <exclude>
      <directory suffix=".php">../Classes/Bootstrap</directory>
      <directory suffix=".php">../Classes/Commands</directory>
    </exclude>
  </coverage>
  <testsuites>
    <testsuite name="Elasticorn Test Suite">
      <directory>../Tests/Unit/</directory>
    </testsuite>
  </testsuites>
</phpunit>
